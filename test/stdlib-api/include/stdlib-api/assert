#ifndef __STDLIB_API_ASSERT_H__
#define __STDLIB_API_ASSERT_H__

#define STDLIB_API_ASSERT_STRX(x) #x
#define STDLIB_API_ASSERT_STR(x) TEST_ASSERT_STRX(x)
#define Assert(x) (void)((x) ?: (__Assert("Assertion failure: " #x " at " __FILE__ ":" TEST_ASSERT_STR(__LINE__))));

extern "C" {

int __stdlib_api_assert(const char * msg);

}

#endif
